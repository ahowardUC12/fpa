@using Glimpse.Mvc.AlternateType
@model FinancialPlannerApplication.Models.ViewModels.EditAccountViewModel

<h2>@ViewBag.Title</h2>

<div class="row">
    <div class="col-md-8">
        <div class="form-horizontal">
            @using (Html.BeginForm(null, null, FormMethod.Post, new{@id="editAccountForm"}))
            {
                @Html.HiddenFor(m => m.Id)
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label class="col-md-2 control-label">Name</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name)
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">Amount</label>
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Amount)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="button" class="btn btn-primary" id="saveAccountButton">Save</button>
                        @*<button type="button" class="btn btn-primary">Done</button>*@
                        @Html.ActionLink("Done", "Index", null, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Cancel", "Index", null, new{@class="btn btn-primary"})
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<script src="~/Scripts/account-edit.js"></script>